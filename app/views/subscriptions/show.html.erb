<%= link_to 'Вернуться на страницу профиля', user_path(@user) %>
<h1> Подписчики <%= @user.nickname %></h1>

<ul>
  <% @followers.each do |follower| %>
    <li>
      <%= follower.name %>
      <% if current_user == @user %>
        <%= button_to 'Отписать', user_subscriptions_path(follower.id), method: :delete, data: { confirm: "Вы действительно хотите отписать #{follower.name}?" } %>
      <% end %>
    </li>
  <% end %>
</ul>
